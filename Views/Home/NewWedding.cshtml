@model Wedding

<div class="text-center">
    <h1>Plan your wedding</h1>
    <form asp-action="CreateNewWedding" asp-controller="Home" method="POST">
        <div class="form-group">
            <span asp-validation-for="WedderOne"></span><br>
            <label asp-for="WedderOne"></label>
            <input asp-for="WedderOne">
        </div>
        <div class="form-group">
            <span asp-validation-for="WedderTwo"></span><br>
            <label asp-for="WedderTwo"></label>
            <input asp-for="WedderTwo">
        </div>
        <div class="form-group">
            <span asp-validation-for="Date"></span><br>
            <label asp-for="Date"></label>
            <input asp-for="Date">
        </div>
        <div class="form-group">
            <span asp-validation-for="WeddingAdress"></span><br>
            <label asp-for="WeddingAdress"></label>
            <input asp-for="WeddingAdress">
        </div>
        <input type="submit" class="btn btn-success m-3">
    </form>
</div>