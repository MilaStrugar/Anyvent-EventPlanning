@model LoginUser

<body>
    <a href="/register">Register</a>
    <form method="post" asp-controller="Home" asp-action="Login">
        <div class="mb-3">
            <label asp-for="LoginEmail">Email:</label>
            <input asp-for="LoginEmail" class="form-control" />
            <span asp-validation-for="LoginEmail" class="aler-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="LoginPassword">Password:</label>
            <input asp-for="LoginPassword" class="form-control" />
            <span asp-validation-for="LoginPassword" class="aler-danger"></span>
        </div>
        <button type="submit" class="btn btn-success">Log In</button>
    </form>
</body>

</html>